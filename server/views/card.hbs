<div id="card">
  {{#if products.length}}

  <table class="table">
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>

      {{#each products}}
      <tr>
        <td style="align-content: left;">{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="button btn btm-small js-remove" data-id="{{id}}">Удалить</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>
  {{else}}
  <p>Корзина пуста</p>
  {{/if}}
</div>